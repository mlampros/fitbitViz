citHeader("Please cite the package in your papers or publications:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(
  bibtype = "Manual",
  title   = "{fitbitViz}: Fitbit Visualizations",
  author  = person("Lampros", "Mouselimis"),
  year    = year,
  note    = note,
  url     = "https://CRAN.R-project.org/package=fitbitViz"
)


